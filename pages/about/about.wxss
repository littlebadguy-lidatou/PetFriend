swiper {
  width: 100%;
  height: 600rpx;
  background-color: #eee;
}

.container {
  display: flex;
  flex-direction: column;
}

.item-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-container image {
  margin-top: 40px;
  width: 200rpx;
  height: 200rpx;
}

.item-container .name {
  margin: 10px;
  font-size: 20px;
}

.item-container .brief {
  margin: 10px;
  font-size: 18px;
}

.introduction {
  margin: 20px;
  color: gray;
  font-size: 18px;
}
